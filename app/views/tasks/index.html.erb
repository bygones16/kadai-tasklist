<h1>メッセージ一覧</h1>
<% if logged_in? %>
<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>メッセージ</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to '新規メッセージの投稿', new_task_path, class: "btn btn-primary" %>

<% else %>
  <%= link_to "ユーザー登録", new_user_path, class: "btn btn-primary" %>
  <%= link_to "Login", login_path, class: "btn btn-default" %>
<% end %>